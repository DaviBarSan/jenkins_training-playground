pipeline {
    agent { 
		docker { 
			image 'alpine/curl:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "curl www.google.com > googleHome.html" 
            }
        }
    }
    post{
    	always{
		archiveArtifacts artifacts: '/var/jenkins_home/workspace/usr3_workspace/051_archiveArtifact/googleHome.html'
	}
    }
}
