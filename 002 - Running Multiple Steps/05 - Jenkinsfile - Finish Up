pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post{
        always{
            print 'This was the following result:'
        }
        success{
            echo 'SUCCESS!!!'
        }
        unsuccess{
            echo 'TRY IT AGAIN'
        }
    }
}
