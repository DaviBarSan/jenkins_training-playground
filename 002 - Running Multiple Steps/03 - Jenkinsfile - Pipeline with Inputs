pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            input {
                message "What is your Name? And your age?"
                parameters {
                    string(name: 'NAME', defaultValue: 'Mr Jenkins', description: 'Users name')
		    string(name: 'AGE', defaultValue: 'Mr Jenkins', description: 'Users age')
                }
            }
	    
	    steps {
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
