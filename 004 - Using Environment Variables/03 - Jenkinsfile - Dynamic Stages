pipeline {
    agent { 
		docker { 
			image 'node:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON text: '[{"name":"node", "command":"npm --version"}, {"name":"maven", "command":"echo We are on maven stage"}]'
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
